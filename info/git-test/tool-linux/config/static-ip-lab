[root@host33 ~]# cat /etc/sysconfig/network
NETWORKING=yes
HOSTNAME=host33
GATEWAY=10.62.66.1


[root@host33 ~]# cat /etc/sysconfig/network-scripts/ifcfg-eth0
DEVICE="eth0"
BOOTPROTO="static"
HOSTNAME="host33"
HWADDR="B0:FA:EB:97:10:A0"
IPV6INIT="NO"
MTU="1500"
NM_CONTROLLED="yes"
ONBOOT="yes"
TYPE="Ethernet"
UUID="9fde858f-562b-43ca-bec2-df613b711f03"
IPADDR=10.62.67.33
NETMASK=255.255.254.0



[root@host33 ~]# cat /etc/resolv.conf
