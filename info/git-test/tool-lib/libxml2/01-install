---------------------------------------------------------------------------------------
1. download
---------------------------------------------------------------------------------------
http://ftp.gnome.org/pub/GNOME/sources/libxml2/2.6/
---------------------------------------------------------------------------------------
2. build
---------------------------------------------------------------------------------------
[caoj7@cncqcaoj7mbp1 libxml2-2.6.30]$./configure --prefix=/Users/caoj7/program/common-c/libxml2-2.6.30
[caoj7@cncqcaoj7mbp1 libxml2-2.6.30]$make
[caoj7@cncqcaoj7mbp1 libxml2-2.6.30]$make install
---------------------------------------------------------------------------------------
3. .bashrc
---------------------------------------------------------------------------------------
#for libxml2
export PATH=/Users/caoj7/program/common-c/libxml2-2.6.30/bin:$PATH
export DYLD_LIBRARY_PATH=/Users/caoj7/program/common-c/libxml2-2.6.30/lib:$DYLD_LIBRARY_PATH
export C_INCLUDE_PATH=/Users/caoj7/program/common-c/libxml2-2.6.30/include:$C_INCLUDE_PATH
