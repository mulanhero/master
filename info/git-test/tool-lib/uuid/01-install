export DYLD_LIBRARY_PATH=/Users/caoj7/program/common-c/libuuid/lib:$DYLD_LIBRARY_PATH
export C_INCLUDE_PATH=/Users/caoj7/program/common-c/libuuid/include:$C_INCLUDE_PATH
