--------------------------------------------------------------------------------
[root@hdsh2-a007 ~]# cat /etc/dhcp/dhcpd.conf 
#
# DHCP Server Configuration file.
#   see /usr/share/doc/dhcp*/dhcpd.conf.sample
#   see 'man 5 dhcpd.conf'
#
allow booting;
allow bootp;
not authoritative;

option domain-name-servers 10.62.66.7;
option ip-forwarding false;
option mask-supplier false;

#filename "pxelinux.0";
#next-server 10.62.66.7;

subnet 10.62.66.0 netmask 255.255.254.0 {
  range dynamic-bootp 10.62.66.11 10.62.66.40;
  option broadcast-address 10.62.67.255;
  option routers 10.62.66.7;

  next-server 10.62.66.7;
  filename "pxelinux.0";

  host gphd-vm27 {
	hardware ethernet B0:FA:EB:97:27:86;
	fixed-address 10.62.67.27;
  }
}
--------------------------------------------------------------------------------
[root@hdsh2-a007 ~]# service dhcpd restart
