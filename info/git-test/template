
 32     $ mkdir build
 33     $ cd build
 34     $ cmake .. \
 35         -DCMAKE_INSTALL_PREFIX=$PREFIX \
 36         -DCMAKE_BUILD_TYPE=RelWithDebInfo
 37     $ make
 38     $ make test
 39     $ make install
